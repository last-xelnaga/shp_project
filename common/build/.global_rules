
C  = $(PREFIX)gcc
CC = $(PREFIX)g++
STRIP = $(PREFIX)strip

CFLAGS   = $(FLAGS) -DDEBUG_TAG="$(TARGET)" -pedantic -Wall -Wextra -std=c99
CXXFLAGS = $(FLAGS) -DDEBUG_TAG="$(TARGET)" -pedantic -Wall -Wextra -std=c++11


OBJC = $(SRCC:%.c=$(OBJDIR)/%.o)

$(OBJDIR)/%.o :%.c
	$(C) -c $(CFLAGS) $(INC) $< -o $@


OBJCPP = $(SRCCPP:%.cpp=$(OBJDIR)/%.o)

$(OBJDIR)/%.o :%.cpp
	$(CC) -c $(CXXFLAGS) $(INC) $< -o $@

.PHONY: all clean debug release strip profile deploy trace

all: debug

executable: $(OBJDIR) $(TARGET)

debug: CFLAGS  += -O0 -g3 -ggdb -DDEBUG
debug: CXXFLAGS += -O0 -g3 -ggdb -DDEBUG
debug: executable

release: clean
release: CFLAGS += -O2 -fomit-frame-pointer
release: CXXFLAGS += -O2 -fomit-frame-pointer
release: strip

strip: executable
	$(STRIP) --strip-all --verbose $(TARGET)

$(OBJDIR):
	mkdir -vp $(OBJDIR)

$(TARGET): $(OBJCPP) $(OBJC)
	$(CC) -o $@ $(OBJCPP) $(OBJC) $(LIB)

clean:
	rm -rf $(OBJDIR) $(TARGET)

profile: debug
	valgrind --leak-check=full --show-leak-kinds=all ./$(TARGET)

deploy: release
	./deploy.sh

trace: debug
	gdb ./$(TARGET) run
